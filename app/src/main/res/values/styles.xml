<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="AppTheme" parent="BaseTheme" />

    <style name="TextViewStyle" parent="Widget.AppCompat.TextView">
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">?attr/design_hintColor</item>
        <item name="android:fontFamily">@font/golos_black</item>
    </style>

    <style name="TextViewStyle.Header">
        <item name="android:textSize">32sp</item>
        <item name="android:textColor">?attr/design_textColor</item>
        <item name="android:fontFamily">@font/golos_black</item>
    </style>

    <style name="TextViewStyle.Usual">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">?attr/design_textColor</item>
        <item name="android:fontFamily">@font/golos_black</item>
    </style>

    <style name="TextViewStyle.Usual.Regular">
        <item name="android:fontFamily">@font/golos_black</item>
    </style>

    <style name="TextViewStyle.Usual.EditText">
        <item name="android:textColor">@color/text_main</item>
        <item name="android:fontFamily">@font/golos_text_medium</item>
    </style>

    <style name="Button" parent="Widget.AppCompat.Button">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">64dp</item>
        <item name="android:background">@drawable/button_states</item>
        <item name="android:textColor">@color/color_state</item>
        <item name="android:padding">0dp</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:paddingTop">15dp</item>
        <item name="paddingStart">16dp</item>
        <item name="paddingEnd">16dp</item>
        <item name="android:fontFamily">@font/golos_text_medium</item>
        <item name="android:paddingBottom">15dp</item>
        <item name="android:gravity">center</item>
    </style>


    <style name="FadeInFadeOutAnimation" parent="android:Animation">
        <item name="android:windowEnterAnimation">@anim/fade_in</item>
        <item name="android:windowExitAnimation">@anim/fade_out</item>
    </style>

</resources>