<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/text_main">

    <View
        android:id="@+id/view_top"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/pin_color"
        android:layout_marginStart="76dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <ImageView
        android:id="@+id/iv_photo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginStart="10dp"
        android:layout_marginBottom="10dp"
        app:layout_constraintTop_toBottomOf="@id/view_top"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        tools:src="@tools:sample/avatars"/>

    <TextView
        android:id="@+id/tv_name_contact"
        style="@style/TextViewStyle.Subtitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:text="Михаил Маркин"
        android:layout_marginTop="7dp"
        android:layout_marginStart="10dp"
        android:fontFamily="@font/golos_text_regular"
        app:layout_constraintTop_toBottomOf="@id/view_top"
        app:layout_constraintStart_toEndOf="@id/iv_photo"
        android:textColor="@color/white"/>

   <TextView
       android:id="@+id/text_of_message"
       style="@style/TextViewStyle.Usual"
       android:fontFamily="@font/golos_text_regular"
       android:textColor="@color/text_inactive"
       android:layout_width="0dp"
       android:layout_height="wrap_content"
       android:layout_marginStart="10dp"
       android:layout_marginTop="2dp"
       android:layout_marginEnd="95dp"
       tools:text="Не теряет актуальности любой прочее"
       app:layout_constraintEnd_toEndOf="parent"
       app:layout_constraintStart_toEndOf="@id/iv_photo"
       app:layout_constraintTop_toBottomOf="@id/tv_name_contact"/>

    <TextView
        android:id="@+id/tv_time"
        style="@style/TextViewStyle.Usual"
        android:fontFamily="@font/golos_text_regular"
        android:textColor="@color/text_inactive"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/chat_time"
        android:layout_marginTop="12dp"
        android:layout_marginEnd="10dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <ImageView
        android:id="@+id/iv_check_mark"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_check_mark"
        android:layout_marginTop="17dp"
        android:layout_marginEnd="4dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toStartOf="@id/tv_time"/>

    <TextView
        android:id="@+id/tv_count_message"
        style="@style/TextViewStyle.Usual"
        android:fontFamily="@font/golos_text_regular"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/white"
        android:layout_marginBottom="12dp"
        android:layout_marginEnd="10dp"
        android:paddingTop="1dp"
        android:paddingStart="6dp"
        android:paddingEnd="6dp"
        android:paddingBottom="2dp"
        android:text="@string/chat_count_of_message"
        android:background="@drawable/bg_rounded_corners_6dp_count_message"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"/>




</androidx.constraintlayout.widget.ConstraintLayout>