<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/back_darkgrey">

    <TextView
        android:id="@+id/tv_third_step"
        style="@style/TextViewStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/background_ellipse"
        android:layout_marginTop="39dp"
        android:layout_marginEnd="32dp"
        android:paddingStart="7dp"
        android:paddingTop="2dp"
        android:paddingEnd="7dp"
        android:paddingBottom="2dp"
        android:textColor="@color/white"
        android:fontFamily="@font/golos_text_regular"
        android:text="3"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tv_second_step"
        style="@style/TextViewStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="41dp"
        android:layout_marginEnd="8dp"
        android:fontFamily="@font/golos_text_regular"
        android:text="2"
        app:layout_constraintEnd_toStartOf="@id/tv_third_step"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tv_first_step"
        style="@style/TextViewStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="41dp"
        android:layout_marginEnd="8dp"
        android:fontFamily="@font/golos_text_regular"
        android:text="1"
        app:layout_constraintEnd_toStartOf="@id/tv_second_step"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/iv_registration_ellipse"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="132dp"
        app:srcCompat="@drawable/ic_registration_ellipse"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <TextView
        android:id="@+id/tv_confirmation_registration"
        style="@style/TextViewStyle.Header"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="32dp"
        android:layout_marginTop="74dp"
        android:layout_marginEnd="32dp"
        android:fontFamily="@font/golos_text_demi_bold"
        android:gravity="center"
        android:text="@string/registration_confirmation"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/iv_registration_ellipse" />

    <TextView
        android:id="@+id/tv_checking_mail"
        style="@style/TextViewStyle.Usual"
        android:textColor="@color/white"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:layout_marginStart="32dp"
        android:layout_marginEnd="32dp"
        android:gravity="center"
        android:fontFamily="@font/golos_text_regular"
        android:text="@string/registration_checking_mail"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv_confirmation_registration" />

    <TextView
        android:id="@+id/tv_send_letter"
        style="@style/TextViewStyle"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:visibility="gone"
        android:layout_marginBottom="32dp"
        android:fontFamily="@font/golos_text_regular"
        android:text="@string/registration_send_letter"
        app:layout_constraintEnd_toEndOf="@id/tv_checking_mail"
        app:layout_constraintStart_toStartOf="@id/tv_checking_mail"
        app:layout_constraintBottom_toBottomOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>