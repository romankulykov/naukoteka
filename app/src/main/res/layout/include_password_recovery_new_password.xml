<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:background="@color/back_darkgrey">

    <uddug.com.naukoteka.ui.custom.HtmlTextView
        android:id="@+id/tv_requirements"
        style="@style/TextViewStyle.Usual"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="32dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="32dp"
        android:fontFamily="@font/golos_text_regular"
        android:text="@string/password_recovery_requirements" />

    <uddug.com.naukoteka.ui.widgets.CustomizedTextInput
        android:id="@+id/cti_new_pass"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="32dp"
        android:layout_marginTop="32dp"
        android:layout_marginEnd="32dp"
        app:hint="@string/password_recovery_new_pass"
        app:typeInput="type_input_password" />

    <uddug.com.naukoteka.ui.widgets.CustomizedTextInput
        android:id="@+id/cti_new_pass_confirmation"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="32dp"
        android:layout_marginTop="12dp"
        android:layout_marginEnd="32dp"
        app:hint="@string/password_recovery_new_pass_confirmation"
        app:typeInput="type_input_password" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:gravity="bottom"
        android:orientation="vertical">

        <Button
            android:id="@+id/btn_save_password"
            style="@style/Button.Registration"
            android:layout_marginStart="32dp"
            android:layout_marginEnd="32dp"
            android:layout_marginBottom="40dp"
            android:enabled="false"
            android:text="@string/password_recovery_save_password"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" />
    </LinearLayout>

</LinearLayout>