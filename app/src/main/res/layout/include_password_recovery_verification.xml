<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:background="@color/back_darkgrey">

    <TextView
        android:id="@+id/tv_send_link"
        style="@style/TextViewStyle.Usual"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="32dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="54dp"
        android:fontFamily="@font/golos_text_regular"
        android:gravity="start"
        android:text="@string/password_recovery_verification_send_link" />

    <TextView
        android:id="@+id/tv_not_receive_letter"
        style="@style/TextViewStyle.Usual"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="32dp"
        android:layout_marginTop="20dp"
        android:fontFamily="@font/golos_text_regular"
        android:text="@string/password_recovery_verification_not_receive_letter" />

    <TextView
        android:id="@+id/tv_send_again"
        style="@style/TextViewStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="32dp"
        tools:visibility="visible"
        android:fontFamily="@font/golos_text_regular"
        android:text="@string/password_recovery_verification_send_again"
        android:visibility="gone" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:gravity="bottom"
        android:orientation="vertical">

        <uddug.com.naukoteka.ui.custom.HtmlTextView
            android:id="@+id/tv_support"
            style="@style/TextViewStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginBottom="39dp"
            android:fontFamily="@font/golos_text_regular"
            android:text="@string/password_recovery_support"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" />

    </LinearLayout>


</LinearLayout>