<?xml version="1.0" encoding="utf-8"?>
<MotionScene xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:motion="http://schemas.android.com/apk/res-auto">
    <Transition
        android:id="@+id/expandBottomSheet"
        motion:constraintSetEnd="@id/endBottomSheet"
        motion:constraintSetStart="@id/startBottomSheet"
        motion:duration="1000">

        <OnSwipe
            motion:dragDirection="dragUp"
            motion:touchAnchorId="@+id/cl_bottom_sheet"
            motion:touchAnchorSide="top"
            motion:touchRegionId="@+id/cl_bottom_sheet" />

    </Transition>

    <ConstraintSet android:id="@+id/startBottomSheet">
        <Constraint
            android:id="@+id/cl_bottom_sheet"
            android:layout_width="match_parent"
            android:layout_height="260dp"
            android:visibility="gone"
            motion:layout_constraintBottom_toBottomOf="parent" />

    </ConstraintSet>

    <ConstraintSet android:id="@+id/endBottomSheet">
        <Constraint
            android:id="@+id/cl_bottom_sheet"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginTop="56dp"
            android:visibility="gone"
            motion:layout_constraintBottom_toBottomOf="parent"
            motion:layout_constraintTop_toTopOf="parent" />

    </ConstraintSet>


</MotionScene>