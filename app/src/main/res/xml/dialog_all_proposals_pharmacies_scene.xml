<?xml version="1.0" encoding="utf-8"?>
<MotionScene xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:motion="http://schemas.android.com/apk/res-auto">

    <Transition
        motion:constraintSetEnd="@id/endProposals"
        motion:constraintSetStart="@id/startProposals">

        <OnSwipe
            motion:dragDirection="dragUp"
            motion:dragScale="1.5"
            motion:moveWhenScrollAtTop="false"
            motion:onTouchUp="autoCompleteToStart"
            motion:touchAnchorId="@+id/rv_offers"
            motion:touchAnchorSide="top" />

    </Transition>

    <ConstraintSet android:id="@+id/startProposals">

        <Constraint android:id="@+id/ll_filters_container">
            <Layout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                motion:layout_constraintTop_toBottomOf="@+id/tv_all_proposals" />
        </Constraint>

    </ConstraintSet>


    <ConstraintSet android:id="@+id/endProposals">

        <Constraint android:id="@+id/ll_filters_container">
            <Layout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                motion:layout_constraintTop_toTopOf="@+id/tv_all_proposals" />
        </Constraint>

    </ConstraintSet>


</MotionScene>