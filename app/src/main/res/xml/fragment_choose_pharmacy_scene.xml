<?xml version="1.0" encoding="utf-8"?>
<MotionScene xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:motion="http://schemas.android.com/apk/res-auto">

    <Transition
        android:id="@+id/expandMap"
        motion:constraintSetEnd="@id/endMap"
        motion:constraintSetStart="@id/startMap"
        motion:duration="1000">


    </Transition>

    <ConstraintSet android:id="@+id/startMap">

        <Constraint android:id="@+id/iv_open_in_full">
            <PropertySet android:visibility="visible" />
        </Constraint>

        <Constraint android:id="@+id/tv_label_choose_pharmacy">
            <PropertySet android:visibility="visible" />
        </Constraint>

        <Constraint android:id="@+id/cv_filter">
            <PropertySet android:visibility="gone" />
        </Constraint>

        <Constraint android:id="@+id/rv_instant_filters">
            <PropertySet android:visibility="gone" />
        </Constraint>

        <Constraint android:id="@+id/cl_zooms">
            <PropertySet android:visibility="visible" />
        </Constraint>


        <Constraint android:id="@+id/iv_my_location">
            <PropertySet android:visibility="visible" />
        </Constraint>


    </ConstraintSet>


    <ConstraintSet android:id="@+id/endMap">

        <Constraint android:id="@+id/iv_open_in_full">
            <PropertySet android:visibility="invisible" />
        </Constraint>


        <Constraint android:id="@+id/tv_label_choose_pharmacy">
            <PropertySet android:visibility="gone" />
        </Constraint>


        <Constraint android:id="@+id/cv_filter">
            <PropertySet android:visibility="visible" />
        </Constraint>


        <Constraint android:id="@+id/rv_instant_filters">
            <PropertySet android:visibility="visible" />
        </Constraint>


        <Constraint android:id="@+id/cl_zooms">
            <PropertySet android:visibility="visible" />
        </Constraint>


        <Constraint android:id="@+id/iv_my_location">
            <PropertySet android:visibility="visible" />
        </Constraint>


    </ConstraintSet>


</MotionScene>