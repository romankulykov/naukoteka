<?xml version="1.0" encoding="utf-8"?>
<MotionScene xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:motion="http://schemas.android.com/apk/res-auto">

    <Transition
        motion:staggered="0.1"
        motion:duration="1000"
        android:id="@+id/swipeToLeftCart"
        motion:constraintSetStart="@id/startBottomCart"
        motion:constraintSetEnd="@id/endBottomCart">

        <KeyFrameSet>
            <KeyAttribute
                motion:framePosition="99"
                motion:motionTarget="@+id/cv_top">
                <CustomAttribute
                    motion:attributeName="visibility"
                    motion:customIntegerValue="4"
                    />
            </KeyAttribute>
            <KeyAttribute
                motion:framePosition="100"
                motion:motionTarget="@+id/cv_top">
                <CustomAttribute
                    motion:attributeName="visibility"
                    motion:customIntegerValue="0" />
            </KeyAttribute>
        </KeyFrameSet>
        <!--<KeyFrameSet>
            <KeyAttribute
                motion:framePosition="99"
                motion:motionTarget="@+id/ll_price_and_pharmacies">
                <CustomAttribute
                    motion:attributeName="visibility"
                    motion:customIntegerValue="4"
                    />
            </KeyAttribute>
            <KeyAttribute
                motion:framePosition="100"
                motion:motionTarget="@+id/ll_price_and_pharmacies">
                <CustomAttribute
                    motion:attributeName="visibility"
                    motion:customIntegerValue="0" />
            </KeyAttribute>
        </KeyFrameSet>-->


        <OnSwipe
            motion:maxVelocity="20"
            motion:maxAcceleration="20"
            motion:dragScale="0.1"
            motion:dragDirection="dragUp"
            motion:touchAnchorId="@+id/nested_scroll_view"
            motion:touchAnchorSide="top" />

    </Transition>

    <ConstraintSet android:id="@+id/startBottomCart">
        <Constraint android:id="@+id/cl_photos">
            <Layout android:layout_width="match_parent" android:layout_height="wrap_content"
                motion:layout_constraintTop_toBottomOf="@+id/cv_top"
                />
            <PropertySet android:alpha="1"/>

        </Constraint>
        <Constraint android:id="@+id/tv_drug_name"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="46dp"
            android:maxLines="3"
            android:ellipsize="none"
            motion:layout_constraintStart_toStartOf="parent"
            motion:layout_constraintEnd_toStartOf="@+id/iv_share"
            motion:layout_constraintTop_toBottomOf="@+id/v_photos"/>

        <Constraint
            android:id="@+id/v_background2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            motion:layout_constraintTop_toBottomOf="@+id/v_photos"
            />

        <!--<Constraint android:id="@+id/cl_add_to_cart">
            <Layout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                motion:layout_constraintBottom_toBottomOf="parent"
                motion:layout_constraintEnd_toEndOf="parent"
                motion:layout_constraintStart_toStartOf="parent" />
        </Constraint>
        <Constraint android:id="@+id/ll_price_and_pharmacies">
            <PropertySet
                android:visibility="gone"
                motion:visibilityMode="ignore"
                />
        </Constraint>-->

        <Constraint android:id="@+id/cv_top">
            <PropertySet
                android:visibility="gone"
                motion:visibilityMode="ignore"
                />
        </Constraint>
    </ConstraintSet>
    <ConstraintSet android:id="@+id/endBottomCart">

        <Constraint android:id="@+id/cl_photos">
            <Layout android:layout_width="0dp" android:layout_height="0dp"
                motion:layout_constraintTop_toTopOf="@+id/cv_top"
                motion:layout_constraintStart_toStartOf="parent"
                motion:layout_constraintEnd_toEndOf="parent"
                motion:layout_constraintBottom_toBottomOf="@+id/cv_top"
                />
            <PropertySet android:alpha="0"/>

        </Constraint>

        <Constraint android:id="@+id/tv_drug_name"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="0dp"
            android:elevation="12dp"
            android:ellipsize="end"
            android:lines="1"
            android:maxLines="2"
            motion:layout_constraintEnd_toStartOf="@+id/iv_share"
            motion:layout_constraintStart_toEndOf="@+id/iv_close"
            motion:layout_constraintBottom_toBottomOf="@+id/cv_top"
            motion:layout_constraintTop_toTopOf="@+id/v_background2"/>

        <Constraint
            android:id="@+id/v_background2"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:scaleY="1.1"
            motion:layout_constraintTop_toTopOf="parent"
            motion:layout_constraintBottom_toBottomOf="parent"
            />

        <!--<Constraint android:id="@+id/cl_add_to_cart">
            <Layout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                motion:layout_constraintBottom_toBottomOf="parent"
                motion:layout_constraintEnd_toEndOf="parent"
                motion:layout_constraintStart_toEndOf="@+id/ll_price_and_pharmacies" />
        </Constraint>
        <Constraint android:id="@+id/ll_price_and_pharmacies">
            <PropertySet
                android:visibility="visible"
                motion:visibilityMode="ignore"
                />
        </Constraint>-->

        <Constraint android:id="@+id/cv_top">
            <PropertySet
                android:visibility="visible"
                motion:visibilityMode="ignore"
                />
        </Constraint>
    </ConstraintSet>

</MotionScene>